<!DOCTYPE html>
<html>
<head>
  <title>DojoSecrets</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class='container'>
		<div class='row'>
			<div class='col-md-6'>
				<h1>Secrets</h1>
				<% if current_user %>
					<a class='btn btn-default' href="/u/<%= current_user.id %>">Home</a>
					<a class='btn btn-default' href='/secrets'>Secrets</a>
				<% end %>
				<% if flash[:errors] %>
					<% flash[:errors].each do |e| %>
						<p class='text-danger'><strong><%= e %></strong></p>
					<% end %>	
				<% end %>
			</div>
			<div class='col-md-6'>
				<% if current_user %>
					<form action='/s/<%= current_user.id %>' method='post'>
						<input type="hidden" name="authenticity_token" value='<%= form_authenticity_token %>'>
						<input type="hidden" name="_method" value='delete'>
						<input class='btn btn-default' type="submit" value="Log Out">
					</form>
				<% end %>
			</div>					
		</div>

		<div class='row'>
			<%= yield %>		
		</div>
	</div>

</body>
</html>
